{
  "manifest_version": 3,
  "name": "HotTurkey",
  "version": "1.0.0",
  "description": "Lightweight website blocker with time windows",
  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "HotTurkey"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
